<!-- `name` versus `id`  - any two elements, apart from siblings, may share a name.
                         - no two elements can have the same id.
                         - use compartment_name/element_name to identify sub-elements.
-->

<cell-diagram xmlns="http://www.cellml.org/celldl/1.0#">

    <!-- Representation of diagram at http://sites.bioeng.auckland.ac.nz/mwu035/mpb/  -->

    <diagram>
        <quantity id="q1"  class="sodium"    label="$\text{q}_1^{[\text{Na}^+]_\text{o}}$" pos="above #u1"/>
        <quantity id="q4"  class="potassium" label="$\text{q}_4^{[\text{K}^+]_\text{o}}$" pos="above #u4"/>
        <quantity id="q7"  class="anion"     label="$\text{q}_7^{[\text{OH}^-]_\text{o}}$"  pos="above #u7"/>
        <quantity id="q9"  class="anion"     label="$\text{q}_9^{[\text{HCO}_3^-]_\text{o}}$" pos="above #u9"/>
        <quantity id="q11" class="chloride"  label="$\text{q}_11^{[\text{Cl}^-]_\text{o}}$" pos="above #u11"/>
        <quantity id="q13" class="hydrogen"  label="$\text{q}_13^{[\text{H}^+]_\text{o}}$"  pos="right #u13"/>
        <quantity id="q16" class="calcium"   label="$\text{q}_16^{[\text{Ca}^{2+}]_\text{o}}$" pos="above #u16"/>

        <compartment id="cell" class="cell" pos="(110, 250)" size="(880, 740)">
            <transporters>
                <transporter id="Na"   class="sodium channel" label="$\text{I}_\text{Na}" pos="90 top"/>
                <transporter id="Na-b" class="sodium channel" label="$\text{I}_\text{Na,b}"/>
                <transporter id="pNa"  class="sodium channel" label="$\text{I}_\text{pNa}"/>

                <transporter id="NKE"  class="metabolic sodium potassium exchanger"/>

                <transporter id="K1"   class="potassium channel" label="$\text{I}_\text{K1}"/>
                <transporter id="Kr"   class="potassium channel" label="$\text{I}_\text{Kr}"/>
                <transporter id="Ks"   class="potassium channel" label="$\text{I}_\text{Ks}"/>
                <transporter id="Katp" class="potassium channel" label="$\text{I}_{\text{K}_\text{ATP}}"/>

                <transporter id="NBC"  class="sodium bicarbonate exchanger"/>
                <transporter id="CHE"  class="chloride hydrogen exchanger"/>
                <transporter id="AE"   class="anion exchanger"/>
                <transporter id="Cl"   class="chloride channel" label="$\text{I}_\text{Cl}"/>
                <transporter id="NHE"  class="sodium hydrogen exchanger"/>

                <transporter id="NCE"  class="sodium calcium exchanger"/>
                <transporter id="pCa"  class="metabolic calcium exchanger"/>
                <transporter id="Ca-b" class="calcium channel" label="$\text{I}_\text{Ca,b}"/>
                <transporter id="Ca-t" class="calcium channel" label="$\text{I}_\text{Ca,t}"/>
                <transporter id="CaL"  class="calcium channel" label="$\text{I}_\text{CaL}"/>
            </transporters>

            <quantity id="q2"  class="sodium"    label="$\text{q}_2^{[\text{Na}^+]_\text{i}}$" pos="below #u2"/>
            <quantity id="q5"  class="potassium" label="$\text{q}_5^{[\text{K}^+]_\text{i}}$" pos="below #u5"/>

            <quantity id="q8"  class="anion"     label="$\text{q}_8^{[\text{OH}^-]_\text{i}}$" pos="below #u8"/>
            <quantity id="q10" class="anion"     label="$\text{q}_10^{[\text{HCO}_3^-]_\text{i}}$" pos="below #u10"/>
            <quantity id="q12" class="chloride"  label="$\text{q}_12^{[\text{Cl}^-]_\text{i}}$" pos="below #u12"/>

            <quantity id="q14" class="hydrogen"  label="$\text{q}_14^{[\text{H}^+]_\text{i}}$" pos="right #u14"/>

            <quantity id="q17" class="calcium"   label="$\text{q}_17^{[\text{Ca}^{2+}]_\text{i}}$" pos="above #u17"/>
            <quantity id="q18" class="calcium"   label="$\text{q}_18^{[\text{Ca}^{2+}]_\text{i}}$" pos="below #u18"/>
            <quantity id="q19" class="calcium"   label="$\text{q}_19^{[\text{Ca}^{2+}\text{-CMDN}]_\text{i}}$" pos="right #u19"/>
            <quantity id="q20" class="calcium"   label="$\text{q}_20^{[\text{Ca}^{2+}\text{-TRPN}]_\text{i}}$" pos="right #u20"/>

            <compartment id="atp" class="metabolic">
                <quantity id="q24" class="metabolic" label="$\text{q}_24^{[\text{ATP}]_\text{i}}$" pos="above #u24"/>
                <quantity id="q25" class="metabolic" label="$\text{q}_25^{[\text{ADP}]}$" pos="(850, 150)"/>
                <quantity id="q26" class="metabolic" label="$\text{q}_26^{[\text{P}]_\text{i}}$" pos="(850, 850)"/>
            </compartment>

            <compartment id="SR" class="organelle reticulum">
                <transporters>
                    <transporter id="SERCA" class="metabolic calcium exchanger"/>
                    <transporter id="RyR"   class="calcium channel" />
                </transporters>
                <quantity id="q21" class="calcium" label="$\text{q}_21^{[\text{Ca}^{2+}]_\text{i}}$" pos="below #u21"/>
                <quantity id="q22" class="calcium" label="$\text{q}_22^{[\text{Ca}^{2+}\text{-CSNQ}]_\text{i}}$" pos="below #u22"/>
            </compartment>

            <compartment id="mitochrondion" class="organelle mitochondrion">
                <transporters>
                    <transporter id="m-NCE"  label="NCE"  class="sodium calcium exchanger"/>
                    <transporter id="m-NHE"  label="NHE"  class="sodium hydrogen exchanger"/>
                    <transporter id="m-KHE"  label="KHE"  class="potassium hydrogen exchanger"/>
                    <transporter id="m-CI"   label="CI"   class="hydrogen exchanger"/>
                    <transporter id="m-CIII" label="CIII" class="hydrogen exchanger"/>
                    <transporter id="m-CIV"  label="CIV"  class="hydrogen exchanger"/>
                    <transporter id="m-CII"  label="CII"  class="hydrogen exchanger"/>
                </transporters>
                <quantity id="q23" class="calcium"   label="$\text{q}_23^{[\text{Ca}^{2+}]_\text{i}}$" pos="below #u23"/>
                <quantity id="q3"  class="sodium"    label="$\text{q}_3^{[\text{Na}^+]_\text{i}}$" pos="below #u3"/>
                <quantity id="q6"  class="potassium" label="$\text{q}_6^{[\text{K}^+]_\text{i}}$" pos="below #u6"/>
                <quantity id="q15" class="hydrogen"  label="$\text{q}_15^{[\text{H}^+]_\text{i}}$" pos="right #u15"/>
            </compartment>
        </compartment>
    </diagram>

    <bond-graph>
        <potential id="u1"  quantity="q1" pos="above #Na"/>
        <potential id="u2"  quantity="q2" pos="below #Na"/>
        <potential id="u3"  quantity="q3" pos="below #m-NCE, #m-NHE"/>
        <potential id="u4"  quantity="q4" pos="above #Kr, #Ks"/>
        <potential id="u5"  quantity="q5" pos="below #Kr, #Ks"/>
        <potential id="u6"  quantity="q6" pos="below #m-KHE"/>
        <potential id="u7"  quantity="q7" pos="above #CHE"/>
        <potential id="u8"  quantity="q8" pos="below #CHE"/>
        <potential id="u9"  quantity="q9" pos="above #AE"/>
        <potential id="u10" quantity="q10" pos="below #AE"/>
        <potential id="u11" quantity="q11" pos="above #Cl"/>
        <potential id="u12" quantity="q12" pos="below #Cl"/>
        <potential id="u13" quantity="q13" pos="above #NHE"/>
        <potential id="u14" quantity="q14" pos="above #m-CIII, #m-CIV"/>
        <potential id="u15" quantity="q15" pos="below #m-CIII, #m-CIV"/>
        <potential id="u16" quantity="q16" pos="left #Ca-b"/>
        <potential id="u17" quantity="q17" pos="right #Ca-b"/>
        <potential id="u18" quantity="q18" pos="right #CaL"/>
        <potential id="u19" quantity="q19" pos="right #Ca-b, #Ca-t; below #NKE, #K1"/>
        <potential id="u20" quantity="q20" pos="below #u19"/>
        <potential id="u21" quantity="q21" pos="right #RyR; below #SERCA"/>
        <potential id="u22" quantity="q22" pos="right #u21"/>
        <potential id="u23" quantity="q23" pos="below #NCE"/>
        <potential id="u24" quantity="q24" pos="(150, 500)"/>
        <potential id="u25" quantity="q25" pos="below #q25"/>
        <potential id="u26" quantity="q26" pos="above #q26"/>

        <flow id="v1" transporter="Na" pos="above">
            <flux from="u1" to="u2"/>
        </flow>
        <flow id="v2" transporter="Na-b" pos="above">
            <flux from="u1" to="u2"/>
        </flow>
        <flow id="v3" transporter="pNa" pos="above">
            <flux from="u1" to="u2"/>
        </flow>
        <flow id="v4" transporter="NKE" pos="above">
            <flux from="u2" to="u1" count="3"/>
            <flux from="u4" to="u5" count="2"/>
        </flow>
        <flow id="v5" transporter="NCE" pos="left">
            <flux from="u1" to="u2" count="3" line="-120 until left #u16, #v5; 180 until left #NCE;"/>
            <flux from="u17" to="u16"/>
        </flow>
        <flow id="v6" transporter="NBC" pos="above">
            <flux from="u7" to="u2"/>
            <flux from="u9" to="u10"/>
        </flow>
        <flow id="v7" transporter="NHE" pos="above">
            <flux from="u14" to="u13"/>
            <flux from="u1" to="u2"/>
        </flow>
        <flow id="v8" transporter="m-NCE" pos="above">
            <flux from="u2" to="u3" count="3"/>
            <flux from="u23" to="u17"/>
        </flow>
        <flow id="v9" transporter="m-NHE" pos="above">
            <flux from="u3" to="u2"/>
            <flux from="u14" to="u15"/>
        </flow>

        <flow id="v10" transporter="K1" pos="above">
            <flux from="u4" to="u5"/>
        </flow>
        <flow id="v11" transporter="Kr" pos="above">
            <flux from="u4" to="u5"/>
        </flow>
        <flow id="v12" transporter="Ks" pos="above">
            <flux from="u4" to="u5"/>
        </flow>
        <flow id="v13" transporter="Katp" pos="above">
            <flux from="u4" to="u5"/>
        </flow>
        <flow id="v14" transporter="m-KHE" pos="above">
            <flux from="u6" to="u5"/>
            <flux from="u14" to="u15"/>
        </flow>
        <flow id="v15" pos="middle #v9, #v14">
            <flux from="u5" to="u6"/>
        </flow>
        <flow id="v16" transporter="Cl" pos="above">
            <flux from="u12" to="u11"/>
        </flow>
        <flow id="v17" transporter="CHE" pos="above">
            <flux from="u11" to="u12"/>
            <flux from="u8" to="u7"/>
        </flow>
        <flow id="v18" transporter="AE" pos="above">
            <flux from="u11" to="u12"/>
            <flux from="u10" to="u9"/>
        </flow>
        <flow id="v19" transporter="pCa" pos="left">
            <flux from="u17" to="u16"/>
        </flow>
        <flow id="v20" transporter="Ca-b" pos="left">
            <flux from="u16" to="u17"/>
        </flow>
        <flow id="v21" transporter="Ca-t" pos="left">
            <flux from="u16" to="u17"/>
        </flow>
        <flow id="v22" transporter="CaL" pos="left">
            <flux from="u16" to="u18"/>
        </flow>
        <flow id="v23" transporter="RyR" pos="right">
            <flux from="u21" to="u18"/>
        </flow>
        <flow id="v24" pos="above #u18">
            <flux from="u18" to="u17"/>
        </flow>
        <flow id="v25" class="dashed" pos="left #u19">
            <!-- what does a dashed path signify?? -->
            <flux from="u17" to="u19"/>
        </flow>
        <flow id="v26" class="dashed" pos="left #u20">
            <flux from="u17" to="u20"/>
        </flow>
        <flow id="v27" transporter="SERCA" pos="above">
            <flux from="u17" to="u21" count="2"/>
        </flow>
        <flow id="v28" pos="middle #u21, #u22">  <!-- implicit default ?? -->
            <flux from="u21" to="u22"/>
        </flow>
        <flow id="v29" pos="left #v8">
            <flux from="u23" to="u17"/>
        </flow>

        <!-- flow v30 ?? -->

        <flow id="v31" transporter="m-CI" pos="above">
            <flux from="u14" to="u15"/>
        </flow>
        <flow id="v32" transporter="m-CIII" pos="above">
            <flux from="u14" to="u15"/>
        </flow>
        <flow id="v33" transporter="m-CIV" pos="above">
            <flux from="u14" to="u15"/>
        </flow>
        <flow id="v34" transporter="m-CII" pos="above">
            <flux from="u14" to="u15"/>
        </flow>
        <flow id="v35">
            <flux from="u24" to="u25 u26"/>
        </flow>
    </bond-graph>


