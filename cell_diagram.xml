<!-- `name` versus `id`  - any two elements, apart from siblings, may share a name.
                         - no two elements can have the same id.
                         - use compartment_name/element_name to identify sub-elements.
-->

<cell-diagram xmlns="http://www.cellml.org/celldl/1.0#">

    <!-- Representation of diagram at http://sites.bioeng.auckland.ac.nz/mwu035/mpb/  -->

    <diagram>
        <quantity id="q1"  class="sodium"    label="$\text{q}_1^{[\text{Na}^+]_\text{o}}$"/>
        <quantity id="q4"  class="potassium" label="$\text{q}_4^{[\text{K}^+]_\text{o}}$"/>
        <quantity id="q7"  class="hydroxide"     label="$\text{q}_7^{[\text{OH}^-]_\text{o}}$" />
        <quantity id="q9"  class="bicarbonate"     label="$\text{q}_9^{[\text{HCO}_3^-]_\text{o}}$"/>
        <quantity id="q11" class="chloride"  label="$\text{q}_11^{[\text{Cl}^-]_\text{o}}$"/>
        <quantity id="q13" class="hydrogen"  label="$\text{q}_13^{[\text{H}^+]_\text{o}}$" />
        <quantity id="q16" class="calcium"   label="$\text{q}_16^{[\text{Ca}^{2+}]_\text{o}}$"/>

        <compartment id="cell" class="cell">
            <transporter id="Na"   class="sodium channel" label="$\text{I}_\text{Na}"/>
            <transporter id="Na_b" class="sodium channel" label="$\text{I}_\text{Na,b}"/>
            <transporter id="pNa"  class="sodium channel" label="$\text{I}_\text{pNa}"/>

            <transporter id="NKE"  class="sodium potassium atp exchanger"/>

            <transporter id="K1"   class="potassium channel" label="$\text{I}_\text{K1}"/>
            <transporter id="Kr"   class="potassium channel" label="$\text{I}_\text{Kr}"/>
            <transporter id="Ks"   class="potassium channel" label="$\text{I}_\text{Ks}"/>
            <transporter id="Katp" class="potassium channel" label="$\text{I}_{\text{K}_\text{ATP}}"/>

            <transporter id="NBC"  class="sodium bicarbonate exchanger"/>
            <transporter id="CHE"  class="hydroxide chloride exchanger"/>
            <transporter id="AE"   class="bicarbonate exchanger"/>
            <transporter id="Cl"   class="chloride channel" label="$\text{I}_\text{Cl}"/>
            <transporter id="NHE"  class="sodium hydrogen exchanger"/>

            <transporter id="NCE"  class="sodium calcium exchanger"/>
            <transporter id="pCa"  class="calcium atp channel"/>
            <transporter id="Ca_b" class="calcium channel" label="$\text{I}_\text{Ca,b}"/>
            <transporter id="Ca_t" class="calcium channel" label="$\text{I}_\text{Ca,t}"/>
            <transporter id="CaL"  class="calcium channel" label="$\text{I}_\text{CaL}"/>

            <quantity id="q2"  class="sodium"    label="$\text{q}_2^{[\text{Na}^+]_\text{i}}$"/>
            <quantity id="q5"  class="potassium" label="$\text{q}_5^{[\text{K}^+]_\text{i}}$"/>

            <quantity id="q8"  class="hydroxide" label="$\text{q}_8^{[\text{OH}^-]_\text{i}}$"/>
            <quantity id="q10" class="bicarbonate" label="$\text{q}_10^{[\text{HCO}_3^-]_\text{i}}$"/>
            <quantity id="q12" class="chloride"  label="$\text{q}_12^{[\text{Cl}^-]_\text{i}}$"/>

            <quantity id="q14" class="hydrogen"  label="$\text{q}_14^{[\text{H}^+]_\text{i}}$"/>

            <quantity id="q17" class="calcium"   label="$\text{q}_17^{[\text{Ca}^{2+}]_\text{i}}$"/>
            <quantity id="q18" class="calcium"   label="$\text{q}_18^{[\text{Ca}^{2+}]_\text{i}}$"/>
            <quantity id="q19" class="calcium"   label="$\text{q}_19^{[\text{Ca}^{2+}\text{-CMDN}]_\text{i}}$"/>
            <quantity id="q20" class="calcium"   label="$\text{q}_20^{[\text{Ca}^{2+}\text{-TRPN}]_\text{i}}$"/>

            <compartment id="atp" class="metabolic">
                <quantity id="q24" class="atp" label="$\text{q}_24^{[\text{ATP}]_\text{i}}$"/>
                <quantity id="q25" class="metabolic" label="$\text{q}_25^{[\text{ADP}]}$"/>
                <quantity id="q26" class="metabolic" label="$\text{q}_26^{[\text{P}]_\text{i}}$"/>
            </compartment>

            <compartment id="SR" class="organelle reticulum">
                <transporter id="SERCA" class="calcium atp channel"/>
                <transporter id="RyR"   class="calcium channel"/>

                <quantity id="q21" class="calcium" label="$\text{q}_21^{[\text{Ca}^{2+}]_\text{i}}$"/>
                <quantity id="q22" class="calcium" label="$\text{q}_22^{[\text{Ca}^{2+}\text{-CSNQ}]_\text{i}}$"/>
            </compartment>

            <compartment id="mitochrondion" class="organelle mitochondrion">
                <transporter id="m_NCE"  label="NCE"  class="sodium calcium exchanger"/>
                <transporter id="m_NHE"  label="NHE"  class="sodium hydrogen exchanger"/>
                <transporter id="m_KHE"  label="KHE"  class="potassium hydrogen exchanger"/>
                <transporter id="m_CI"   label="CI"   class="hydrogen exchanger"/>
                <transporter id="m_CIII" label="CIII" class="hydrogen exchanger"/>
                <transporter id="m_CIV"  label="CIV"  class="hydrogen exchanger"/>
                <transporter id="m_CII"  label="CII"  class="hydrogen exchanger"/>
                <transporter id="m_K"    label="K"    class="potassium diffuser"/>
                <transporter id="m_Ca"   label="Ca"   class="calcium diffuser"/>

                <quantity id="q23" class="calcium"   label="$\text{q}_23^{[\text{Ca}^{2+}]_\text{i}}$"/>
                <quantity id="q3"  class="sodium"    label="$\text{q}_3^{[\text{Na}^+]_\text{i}}$"/>
                <quantity id="q6"  class="potassium" label="$\text{q}_6^{[\text{K}^+]_\text{i}}$"/>
                <quantity id="q15" class="hydrogen"  label="$\text{q}_15^{[\text{H}^+]_\text{i}}$"/>
            </compartment>
        </compartment>
    </diagram>

    <bond-graph>
        <potential id="u1"  quantity="q1"/>
        <potential id="u2"  quantity="q2"/>
        <potential id="u3"  quantity="q3"/>
        <potential id="u4"  quantity="q4"/>
        <potential id="u5"  quantity="q5"/>
        <potential id="u6"  quantity="q6"/>
        <potential id="u7"  quantity="q7"/>
        <potential id="u8"  quantity="q8"/>
        <potential id="u9"  quantity="q9"/>
        <potential id="u10" quantity="q10"/>
        <potential id="u11" quantity="q11"/>
        <potential id="u12" quantity="q12"/>
        <potential id="u13" quantity="q13"/>
        <potential id="u14" quantity="q14"/>
        <potential id="u15" quantity="q15"/>
        <potential id="u16" quantity="q16"/>
        <potential id="u17" quantity="q17"/>
        <potential id="u18" quantity="q18"/>
        <potential id="u19" quantity="q19"/>
        <potential id="u20" quantity="q20"/>
        <potential id="u21" quantity="q21"/>
        <potential id="u22" quantity="q22"/>
        <potential id="u23" quantity="q23"/>
        <potential id="u24" quantity="q24"/>
        <potential id="u25" quantity="q25"/>
        <potential id="u26" quantity="q26"/>

        <flow id="v1" transporter="Na">
            <flux from="u1" to="u2" class="sodium"/>
        </flow>
        <flow id="v2" transporter="Na_b">
            <flux from="u1" to="u2" class="sodium"/>
        </flow>
        <flow id="v3" transporter="pNa">
            <flux from="u1" to="u2" class="sodium"/>
        </flow>
        <flow id="v4" transporter="NKE">
            <flux from="u2" to="u1" count="3" class="sodium"/>
            <flux from="u4" to="u5" count="2" class="potassium"/>
        </flow>
        <flow id="v5" transporter="NCE">
            <flux from="u1" to="u2" count="3" class="sodium"/>
            <flux from="u17" to="u16" class="calcium"/>
        </flow>
        <flow id="v6" transporter="NBC">
            <flux from="u1" to="u2" class="sodium"/>
            <flux from="u9" to="u10" class="anion"/>
        </flow>
        <flow id="v7" transporter="NHE">
            <flux from="u14" to="u13" class="hydrogen"/>
            <flux from="u1" to="u2" class="sodium"/>
        </flow>
        <flow id="v8" transporter="m_NCE">
            <flux from="u2" to="u3" count="3" class="sodium"/>
            <flux from="u23" to="u17" class="calcium"/>
        </flow>
        <flow id="v9" transporter="m_NHE">
            <flux from="u3" to="u2" class="sodium"/>
            <flux from="u14" to="u15" class="hydrogen"/>
        </flow>

        <flow id="v10" transporter="K1">
            <flux from="u4" to="u5" class="potassium"/>
        </flow>
        <flow id="v11" transporter="Kr">
            <flux from="u4" to="u5" class="potassium"/>
        </flow>
        <flow id="v12" transporter="Ks">
            <flux from="u4" to="u5" class="potassium"/>
        </flow>
        <flow id="v13" transporter="Katp">
            <flux from="u4" to="u5" class="potassium"/>
        </flow>
        <flow id="v14" transporter="m_KHE">
            <flux from="u6" to="u5" class="potassium"/>
            <flux from="u14" to="u15" class="hydrogen"/>
        </flow>
        <flow id="v15" transporter="m_K">
            <flux from="u5" to="u6" class="potassium"/>
        </flow>
        <flow id="v16" transporter="Cl">
            <flux from="u12" to="u11" class="chloride"/>
        </flow>
        <flow id="v17" transporter="CHE">
            <flux from="u11" to="u12" class="chloride"/>
            <flux from="u8" to="u7" class="anion"/>
        </flow>
        <flow id="v18" transporter="AE">
            <flux from="u11" to="u12" class="chloride"/>
            <flux from="u10" to="u9" class="anion"/>
        </flow>
        <flow id="v19" transporter="pCa">
            <flux from="u17" to="u16" class="calcium"/>
        </flow>
        <flow id="v20" transporter="Ca_b">
            <flux from="u16" to="u17" class="calcium"/>
        </flow>
        <flow id="v21" transporter="Ca_t">
            <flux from="u16" to="u17" class="calcium"/>
        </flow>
        <flow id="v22" transporter="CaL">
            <flux from="u16" to="u18" class="calcium"/>
        </flow>
        <flow id="v23" transporter="RyR">
            <flux from="u21" to="u18" class="calcium"/>
        </flow>
        <flow id="v24">
            <flux from="u18" to="u17" class="calcium"/>
        </flow>
        <flow id="v25">
            <flux from="u17" to="u19" class="calcium dashed"/>
        </flow>
        <flow id="v26">
            <flux from="u17" to="u20" class="calcium dashed"/>
        </flow>
        <flow id="v27" transporter="SERCA">
            <flux from="u17" to="u21" count="2" class="calcium"/>
        </flow>
        <flow id="v28">  <!-- implicit default ?? -->
            <flux from="u21" to="u22" class="calcium"/>
        </flow>
        <flow id="v29" transporter="m_Ca">
            <flux from="u23" to="u17" class="calcium"/>
        </flow>

        <!-- flow v30 ?? -->

        <flow id="v31" transporter="m_CI">
            <flux from="u14" to="u15" class="hydrogen"/>
        </flow>
        <flow id="v32" transporter="m_CIII">
            <flux from="u14" to="u15" class="hydrogen"/>
        </flow>
        <flow id="v33" transporter="m_CIV">
            <flux from="u14" to="u15" class="hydrogen"/>
        </flow>
        <flow id="v34" transporter="m_CII">
            <flux from="u14" to="u15" class="hydrogen"/>
        </flow>
        <flow id="v35">
            <flux from="u24" to="u25 u26" class="metabolic"/>
        </flow>
    </bond-graph>

    <style>
        .sodium { colour: #FE44F9; }
        quantity.sodium { colour: radial-gradient(white, #FEA3FB); }
        transporter.sodium { colour: radial-gradient(white 40%, #FE44F9); }

        .potassium { colour: #2209E1; }
        quantity.potassium { colour: radial-gradient(white, #9C9FF5); }
        transporter.potassium { colour: radial-gradient(white 40%, #9C9FF5); }

        .calcium { colour: #0AD8FF; }
        quantity.calcium { colour: radial-gradient(white, #0AD8FF); }
        transporter.calcium { colour: radial-gradient(white 40%, #0AD8FF); }

        .chloride { colour: #1AF32E; }
        quantity.chloride { colour: radial-gradient(white, #BEFFCA); }

        .hydrogen { colour: #FFA606; }
        quantity.hydrogen { colour: radial-gradient(white, #FFD12E); }

        .hydroxide { colour: #4A9B00; }
        quantity.hydroxide { colour: radial-gradient(white, #A4D5A0); }

        .bicarbonate { colour: #A00096; }
        quantity.bicarbonate { colour: radial-gradient(white, #B254AD); }

        .metabolic { colour: #F50D00; }
        quantity.metabolic { colour: radial-gradient(white, #FF808B); }

        .atp { stroke: #FF6976 }
        quantity.atp { colour: radial-gradient(white, #FF0E00); }


        flow {
            colour: radial-gradient(#ABFF9E, #D5FFD5);
            text-colour: #059996;
        }

        potential {
            colour: radial-gradient(#FF9299, #FFFDEE);
            text-colour: #D93300;
        }

        .channel {
            svg-element: Channel;
        }

        .channel.atp {
            svg-element: PMRChannel;
        }

        .exchanger {
            svg-element: Exchanger;
        }

        .diffuser {
            display: none;
        }

        diagram {
            width: 1600;           /* SVG `pixel` units */
            height:1000;           /* SVG `pixel` units */
            flow-offset: 20x;      /* From its transporter */
            quantity-offset: 30x;  /* From its potential   */
        }

        /* Quantity positioning is by default wrt potentials */
        #q1 { position: above; }
        #q4 { position: above; }
        #q7 { position: above; }
        #q9 { position: above; }
        #q11 { position: above; }
        #q13 { position: right; }
        #q16 { position: above; }

        #u1 { position: 100 above #Na_b; }
        #u2 { position:  60 below #Na_b; }
        #u4 { position: 100 above #Kr #Ks; }
        #u5 { position:  60 below #Kr #Ks; }
        #u7 { position: 5x left #CHE, 100 above #CHE; }
        #u8 { position: 5x left #CHE,  60 below #CHE; }
        #u9 { position: 5x left #AE, 100 above #AE; }
        #u10 { position: 5x left #AE, 60 below #AE; }
        #u11 { position: 100 above #Cl; }
        #u12 { position:  60 below #Cl; }
        #u13 { position: 5x right #NHE, 100 above #NHE; }
        #u14 { position: 5x right #NHE, 250 below #NHE; }
        #u15 { position: right #u6, below #u14; }

        #q2 { position: below; }
        #q5 { position: below; }

        #q8 { position: below; }
        #q10 { position: below; }
        #q12 { position: below; }

        #cell {
            size: (80%, 65%);
            position: (11%, 25%);
            svg-element: CellMembrane;
        }
        #Na { position:   top  9%; }
        #Na_b { position: top 13%; }
        #pNa { position:  top 17%; }
        #NKE { position:  top 24%; }
        #K1 { position:   top 29%; }
        #Kr { position:   top 33%; }
        #Ks { position:   top 37%; }
        #Katp { position: top 41%; }
        #NBC { position:  top 46%; }
        #CHE { position:  top 51%; }
        #AE { position:   top 56%; }
        #Cl { position:   top 61%; }
        #NHE { position:  top 69%; }

        #NCE { position:  left 14%; }
        #pCa { position:  left 31%; }
        #Ca_b { position: left 37%; }
        #Ca_t { position: left 43%; }
        #CaL { position:  left 75%; }

        #q14 { position: right; }

        #q17 { position: above; }
        #q18 { position: below; }
        #q19 { position: right; }
        #q20 { position: right; }

        #atp {
            size: (15%, 30%);
            position: (80%, 5%);
        }
        #q24 { position: above; }
        #u24 { position: (15%, 50%); }
        #q25 { position: (85%, 15%); }
        #u25 { position: below; }
        #q26 { position: (85%, 85%); }
        #u26 { position: above; }

        #SR {
            size: (25%, 25%);
            position: (10%, 65%);
        }
        #SERCA { position: top 25%; }
        #RyR { position: left 40%; }
        #q21 { position: below; }
        #u21 { position: right #RyR, below #SERCA; }
        #q22 { position: below; }
        #u22 { position: 40% right #u21; }

        #mitochrondion {
            size: (30%, 30%);
            position: (50%, 55%);
        }
        #m_Ca { position: top 5%; }

        transporter[id="m_NCE"] {
            position:  top 12%;
        }
        flow[transporter="m_NCE"] {
            position: above;
        }

        flow[transporter="m_NCE"] > flux[from="u2"][to="u3"] {
            line-start: -53 until-x 20 left #NKE, 0 until-x #m_NCE;
        }
        flow[transporter="m_NCE"] > flux[from="u23"][to="u17"] {
            line-end: 0 until-x #m_NCE offset (0, -3);
        }
        flow[transporter="m_Ca"] > flux[from="u23"][to="u17"] {
            line-end: 0 until-x #m_Ca offset (0, 3);
        }

        transporter[id="m_NHE"] {
            position:  top 26%;
        }
        flow[transporter="m_NHE"] {
            position: above;
        }
        flow[transporter="m_NHE"] > flux[from="u3"][to="u2"] {
            line-end: -50 until-x 20 left #NKE, 0 until-x #m_NHE;
            }

        #m_K { position:    top 34%; }
        #m_KHE { position:  top 40%; }
        #m_CI { position:   top 52%; }
        #m_CIII { position: top 64%; }
        #m_CIV { position:  top 76%; }
        #m_CII { position:  top 88%; }

        #q23 { position: below; }
        #q3 { position: below; }
        #q6 { position: below; }
        #q15 { position: right; }

        #u23 { position: 60 below #m_Ca #m_NCE; }
        #u3 { position:  60 below #m_NCE #m_NHE; }
        #u6 { position:  60 below #m_K #m_KHE; }

        #u16 { position:  60 left #Ca_b; }
        #u17 { position:  40 right #Ca_b; }
        #u18 { position:  40 right #CaL; }

        #u19 { position:  45% below #K1; }
        #u20 { position:  40 below #u19; }
        flow[id="v25"] > flux[from="u17"][to="u19"] {
            line-start: -12 until-y #v25;
            }
        flow[id="v26"] > flux[from="u17"][to="u20"] {
            line-start: -20 until-y #v26;
            }


        #v1 { position: above; }
        #v2 { position: above; }
        #v3 { position: above; }
        #v4 { position: above; }

        flow[transporter="NCE"] {
            position: left;
            }
        flow[transporter="NCE"] > flux[from="u1"][to="u2"] {
            line-start: 195 until-x #u16 #v5, -90 until-y #NCE;
            }

        flow[transporter="NBC"] {
            position: above;
            }
        flow[transporter="NBC"] > flux[from="u1"][to="u2"] {
            line-start: 48 until-x #pNa #NKE, 0 until-x #NBC;
            line-end: -36 until-x 20 left #NKE, 0 until-x #NBC;
            }

        flow[transporter="NHE"] {
            position: above;
            }
        flow[transporter="NHE"] > flux[from="u1"][to="u2"] {
            line-start: 50 until-x #pNa #NKE, 0 until-x #NHE;
            line-end: -39 until-x 20 left #NKE, 0 until-x #NHE;
            }

        #v10 { position: above; }
        #v11 { position: above; }
        #v12 { position: above; }
        #v13 { position: above; }

        flow[transporter="m_KHE"] {
            position: above;
            }
        flow[transporter="m_KHE"] > flux[from="u6"][to="u5"] {
            line-end: -49 until-x 10 right #Katp, 0 until-x #m_KHE;
            }

        flow[transporter="m_K"] {
            position: above;
            }
        flow[transporter="m_K"] > flux[from="u5"][to="u6"] {
            line-start: -52 until-x 10 right #Katp, 0 until-x #m_K;
            }

        #v16 { position: above; }
        #v17 { position: above; }
        #v18 { position: above; }
        #v19 { position: left; }
        #v20 { position: left; }
        #v21 { position: left; }

        flow[transporter="CaL"] {
            position: left;
            }
        flow[transporter="CaL"] > flux[from="u16"][to="u18"] {
            line-start: -90 until-y #CaL;
            }

        #v23 { position: right; }
        #v24 { position: above #u18; }
        #v25 { position: left #u19; }
        #v26 { position: left #u20; }
        #v27 { position: above; }
        #v28 { position: 0 above #u21 #u22; }
        #v29 { position: above #m_Ca; }
        #v31 { position: above; }
        #v32 { position: above; }
        #v33 { position: above; }
        #v34 { position: above; }
        #v35 { position: left #u25 #u26, above #u24 #u25 }
    </style>

</cell-diagram>
